{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "rootDir": ".",
    "moduleResolution": "Bundler",
    "types": ["vitest/globals"],
    "declaration": true,
    "outDir": "./dist",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "./bin/**/*.test.ts",
    "./bin/mocks/**/*",
    "./*.config.ts",
    "./src/test-apps",
    "./src/test-apps/**/*",
    "./plugins/**/*",
    "./src/external/**/*",
    "./src/external/react-d3-tree",
    "./scripts",
    "./docs",
    "tsup*.ts",
    "./src/external/react-use-websocket"
  ]
}
